<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center"
    tools:context="com.pineapplesoftware.amplitudeexample.view.SecondActivity">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_coconut"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_activity_text"
        android:layout_marginTop="@dimen/dimen_regular"
        android:layout_marginBottom="@dimen/dimen_regular"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/goToFlowOneButton"
        android:layout_marginLeft="@dimen/dimen_regular"
        android:layout_marginRight="@dimen/dimen_regular"
        android:layout_marginTop="@dimen/dimen_regular"
        android:text="@string/go_to_flow_one_button_text"
        style="@style/GreenButtonStyle" />

    <Button
        android:id="@+id/goToFlowTwoButton"
        android:layout_marginLeft="@dimen/dimen_regular"
        android:layout_marginRight="@dimen/dimen_regular"
        android:layout_marginTop="@dimen/dimen_regular"
        android:text="@string/go_to_flow_two_button_text"
        style="@style/GreenButtonStyle" />

</LinearLayout>
